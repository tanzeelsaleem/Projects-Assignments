doctype html
html
  head
    title= title
    style
      include ./signupStyle.css
  body(style='background-image: url("../static/images/image2.jpg");background-size: cover')
  include header1.pug
  #login-box
    .left
      h1 Sign Up
      form(role='form' method='POST' action='/signupAction')
        input(type='text', name='name', placeholder='Name', pattern='^[a-zA-Z]+$')
        input(type='email', name='email', placeholder='Email', pattern='^[a-zA-Z0-9.!#$%&*+/=?^_`{|}~-]+@[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?(?:\.[a-zA-Z0-9](?:[a-zA-Z0-9-]{0,61}[a-zA-Z0-9])?)*$')
        input(type='tel', name='phone', placeholder='Phone Number', pattern='^03[0-9]{2}[0-9]{7}$')
        input(type='password', name='password', placeholder='Password')
        input(type='text', name='birthday', placeholder='Birthday',onfocus="(this.type='date')", onblur="(this.type='text')")
        select(name="gender") 
          option(value='male') Male
          option(value='female') Female
          option(value='other') Other
        input(type='submit', name='signup', value='Sign up')
    .right
      span.loginwith Sign Up with
        br
        | social network
      button.social-signin.facebook
        a.text-white(href='https://facebook.com') Log in with Facebook
      button.social-signin.google
        a.text-white(href='https://mail.google.com') Log in with Google+
      a(href='/login') Already have an account?
    .or OR
