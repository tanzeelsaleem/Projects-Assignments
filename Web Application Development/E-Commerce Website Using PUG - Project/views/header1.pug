html(lang="en")
  head
    title E-Mart
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css")
  body.p-3
    div.bg-light.sticky-top
      div.d-flex.justify-content-between.row
        div.navbar.navbar-expand.bg-light.ps-4.col-8
          a.navbar-brand(href="/" style="font-size:1.5em") E-MART
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current="page" href="login") Login
            li.nav-item
              a.nav-link(href="signup") Sign Up
            li.nav-item
              a.nav-link(href="about") About
            li.nav-item
              a.nav-link(href="contact") Contact Us
        div.col-4
          form.d-flex.pe-4(role="search" action='search')
            input.form-control.me-2.mt-2.mr-2(type="search" name='name' placeholder="Search" aria-label="Search")
            button.btn.btn-outline-primary.mt-2.mr-1(type="submit") Search
            button.btn.btn-outline-primary.mt-2.mr-2.w-50(type="button") 
              a(href="cart") View Cart
